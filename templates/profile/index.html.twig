{% extends 'base.html.twig' %} {% block title %}Mon Profil{% endblock %} {%
block body %}
<div class="container my-4">
    <a href="{{ path('app_home') }}" class="btn btn-link mb-3"
        >← Retourner à l'accueil</a
    >

    <div class="card mb-4">
        <div class="card-body">
            <h1 class="card-title">Profil de {{ user.name }}</h1>
        </div>
    </div>

    <!-- Informations personnelles -->
    <div class="card mb-4">
        <div class="card-header">Informations Personnelles</div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>Email :</strong> {{ user.email }}
                </li>
                <li class="list-group-item">
                    <strong>Âge :</strong> {{ user.age }} ans
                </li>
                <li class="list-group-item">
                    <strong>Taille :</strong> {{ user.height }} cm
                </li>
                <li class="list-group-item">
                    <strong>Poids initial :</strong> {{ user.weight }} kg
                </li>
                {% if goal is not null %}
                <li class="list-group-item">
                    <strong>Poids objectif :</strong> {{ goal.targetWeight }} kg
                </li>
                {% else %}
                <li class="list-group-item">
                    Aucun objectif défini.
                    <a
                        href="{{ path('goal') }}"
                        class="btn btn-sm btn-secondary ms-2"
                        >Ajouter un objectif</a
                    >
                </li>
                {% endif %} {% if workoutPlan is not null %}
                <li class="list-group-item">
                    <a
                        href="{{ path('workout_plan_show') }}"
                        class="btn btn-sm btn-primary"
                        >Voir mon plan</a
                    >
                </li>
                {% else %}
                <li class="list-group-item text-muted">
                    En attente d'un plan du coach
                </li>
                {% endif %}
            </ul>
        </div>
    </div>

    <!-- Historique du poids -->
    <div class="card mb-4">
        <div class="card-header">Historique du Poids</div>
        <div class="card-body">
            {% if weights is not empty %}
            <ul class="list-group">
                {% for w in weights %}
                <li class="list-group-item">
                    {{ w.recordedAt ? w.recordedAt|date('d/m/Y') : 'N/A' }} →
                    {{ w.weightValue }} kg
                </li>
                {% endfor %}
            </ul>
            {% else %}
            <p class="text-muted">Aucun poids enregistré pour l’instant.</p>
            {% endif %}
            <a
                href="{{ path('app_stats', { id: user.id }) }}"
                class="btn btn-sm btn-info mt-2"
                >Voir les stats</a
            >
        </div>
    </div>

    <!-- Objectif actuel -->
    <div class="card mb-4">
        <div class="card-header">Objectif Actuel</div>
        <div class="card-body">
            {% if goal is not null %}
            <p>{{ goal.type.value }}</p>
            {% else %}
            <p>Aucun objectif défini.</p>
            <a href="{{ path('goal') }}" class="btn btn-sm btn-secondary"
                >Ajouter un objectif</a
            >
            {% endif %}
        </div>
    </div>

    <!-- Ajouter un poids -->
    <div class="card mb-4">
        <div class="card-header">Ajouter un Poids</div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="weightValue" class="form-label"
                        >Poids actuel (kg)</label
                    >
                    <input
                        type="number"
                        id="weightValue"
                        name="weightValue"
                        step="0.1"
                        min="0"
                        placeholder="Ex: 67.5"
                        class="form-control"
                        required
                    />
                    <small class="text-muted"
                        >Entrez votre poids en kilogrammes (ex. 67.5).</small
                    >
                </div>
                <button type="submit" class="btn btn-primary">
                    Enregistrer
                </button>
            </form>
        </div>
    </div>

    <!-- Messages flash -->
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message }}</div>
    {% endfor %} {% for message in app.flashes('error') %}
    <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
</div>

<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
{% endblock %}
