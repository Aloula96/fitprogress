{% extends 'base.html.twig' %} {% block title %}Mon Profil{% endblock %} {%
block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('styles/profile.css') }}" />
<link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
/>
{% endblock %} {% block body %}
<div class="container my-5 monProfile-container">
    <!-- Retour -->
    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary mb-4">
        <i class="bi bi-arrow-left"></i> Retour à l'accueil
    </a>

    <!-- En-tête Profil -->
    <div class="text-center mb-5">
        <h1 class="fw-bold">
            <i class="bi bi-person-circle"></i> Profil de {{ user.name }}
        </h1>
        <p class="text-muted">
            Gérez vos informations personnelles et vos objectifs
        </p>
        <a
            href="{{ path('app_profile_edit') }}"
            class="btn btn-outline-primary"
        >
            <i class="bi bi-pencil-square"></i> Modifier mon profil
        </a>
    </div>

    <!-- Informations personnelles -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <i class="bi bi-info-circle"></i> Informations Personnelles
        </div>
        <div class="card-body p-0">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>Email :</strong> {{ user.email }}
                </li>
                <li class="list-group-item">
                    <strong>Âge :</strong> {{ user.age }} ans
                </li>
                <li class="list-group-item">
                    <strong>Taille :</strong> {{ user.height }} cm
                </li>
                <li class="list-group-item">
                    <strong>Poids initial :</strong> {{ user.weight }} kg
                </li>

                {% if goal is not null %}
                <li class="list-group-item">
                    <strong>Poids objectif :</strong> {{ goal.targetWeight }} kg
                </li>
                {% else %}
                <li
                    class="list-group-item d-flex justify-content-between align-items-center"
                >
                    <span>Aucun objectif défini.</span>
                    <a
                        href="{{ path('goal') }}"
                        class="btn btn-sm btn-outline-secondary"
                    >
                        <i class="bi bi-plus-circle"></i> Ajouter
                    </a>
                </li>
                {% endif %} {% if workoutPlan is not null %}
                <li class="list-group-item text-center">
                    <a
                        href="{{ path('workout_plan_show') }}"
                        class="btn btn-sm btn-primary"
                    >
                        <i class="bi bi-list-task"></i> Voir mon plan
                    </a>
                </li>
                {% else %}
                <li class="list-group-item text-muted">
                    En attente d'un plan du coach
                </li>
                {% endif %}
            </ul>
        </div>
    </div>

    <!-- Historique du poids -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-secondary text-white">
            <i class="bi bi-graph-up"></i> Historique du Poids
        </div>
        <div class="card-body">
            {% if weights is not empty %}
            <ul class="list-group">
                {% for w in weights %}
                <li class="list-group-item d-flex justify-content-between">
                    <span
                        >{{ w.recordedAt ? w.recordedAt|date('d/m/Y') : 'N/A' }}</span
                    >
                    <span class="fw-bold">{{ w.weightValue }} kg</span>
                </li>
                {% endfor %}
            </ul>
            {% else %}
            <p class="text-muted fst-italic">
                Aucun poids enregistré pour l’instant.
            </p>
            {% endif %}

            <a
                href="{{ path('app_stats', { id: user.id }) }}"
                class="btn btn-outline-primary mt-3"
            >
                <i class="bi bi-bar-chart"></i> Voir les stats
            </a>
        </div>
    </div>

    <!-- Objectif actuel -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-warning text-dark">
            <i class="bi bi-bullseye"></i> Objectif Actuel
        </div>
        <div class="card-body">
            {% if goal is not null %}
            <p class="fw-semibold">{{ goal.type.value }}</p>
            {% else %}
            <p class="text-muted">Aucun objectif défini.</p>
            <a href="{{ path('goal') }}" class="btn btn-sm btn-outline-warning">
                <i class="bi bi-plus-circle"></i> Ajouter un objectif
            </a>
            {% endif %}
        </div>
    </div>

    <!-- Ajouter un poids -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-success text-white">
            <i class="bi bi-plus-square"></i> Ajouter un Poids
        </div>
        <div class="card-body">
            <form method="post" class="row g-3">
                <div class="col-md-6">
                    <label for="weightValue" class="form-label"
                        >Poids actuel (kg)</label
                    >
                    <input
                        type="number"
                        id="weightValue"
                        name="weightValue"
                        step="0.1"
                        min="0"
                        placeholder="Ex: 67.5"
                        class="form-control"
                        required
                    />
                    <div class="form-text">
                        Entrez votre poids en kilogrammes.
                    </div>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-save"></i> Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Messages flash -->
    {% for message in app.flashes('success') %}
    <div class="alert alert-success mt-3">
        <i class="bi bi-check-circle"></i> {{ message }}
    </div>
    {% endfor %} {% for message in app.flashes('error') %}
    <div class="alert alert-danger mt-3">
        <i class="bi bi-x-circle"></i> {{ message }}
    </div>
    {% endfor %}
</div>
{% endblock %}
