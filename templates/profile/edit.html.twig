{% extends 'base.html.twig' %} {% block title %}Modifier mon profil{% endblock
%} {% block body %}
<div class="container my-5">
    <!-- Retour au profil -->
    <a href="{{ path('app_profile') }}" class="btn btn-outline-secondary mb-4">
        <i class="bi bi-arrow-left"></i> Retour au profil
    </a>

    <!-- Titre -->
    <div class="text-center mb-5">
        <h1 class="fw-bold">
            <i class="bi bi-pencil-square"></i> Modifier mon profil
        </h1>
        <p class="text-muted">Mettez à jour vos informations personnelles</p>
    </div>

    <!-- Formulaire -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'form-label fw-semibold'
                }}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}})
                }}
                {{ form_errors(form.name) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label fw-semibold'
                }}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}})
                }}
                {{ form_errors(form.email) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.age, 'Âge', {'label_attr': {'class': 'form-label fw-semibold'
                }}) }}
                {{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.age) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.height, 'Taille (cm)', {'label_attr': {'class': 'form-label fw-semibold'
                }}) }}
                {{ form_widget(form.height, {'attr': {'class': 'form-control'}})
                }}
                {{ form_errors(form.height) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.weight, 'Poids (kg)', {'label_attr': {'class': 'form-label fw-semibold'
                }}) }}
                {{ form_widget(form.weight, {'attr': {'class': 'form-control'}})
                }}
                {{ form_errors(form.weight) }}
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-save"></i> Enregistrer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
