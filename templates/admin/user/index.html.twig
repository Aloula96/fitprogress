{% extends 'baseAdmin.html.twig' %} {% block title %}User Administration{%
endblock %} {% block body %}
<div class="container">
    <h1>User Management</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Name</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.height }} cm</td>
                <td>{{ user.weight }} kg</td>
                <td>
                    <a href="#" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i> View
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">No users found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
