{% extends 'base.html.twig' %} {% block title %}Mes Exercices{% endblock %} {%
block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('styles/dashboard.css') }}" />
<link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
/>
{% endblock %} {% block body %}
<div class="container my-5">
    <!-- Title -->
    <div class="text-center mb-4">
        <h1 class="fw-bold page-title">
            <i class="bi bi-barbell"></i> Mes Exercices
        </h1>
        <p class="lead">Voici les exercices de ton plan actuel</p>
    </div>

    <div class="row">
        {% if exercices|length %} {% for exercice in exercices %}
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img
                    src="{{ asset('images/exercices/' ~ (exercice.image|default('default.jpg'))) }}"
                    class="card-img-top"
                    alt="{{ exercice.name }}"
                />
                <div class="card-body text-center">
                    <h5 class="fw-bold card-title">{{ exercice.name }}</h5>
                    <p class="small card-text">{{ exercice.description }}</p>
                    <p>
                        <span class="badge bg-primary">
                            <i class="bi bi-list-ol"></i> Sets:
                            {{ exercice.sets }}
                        </span>
                        <span class="badge bg-success">
                            <i class="bi bi-repeat"></i> Reps:
                            {{ exercice.reps }}
                        </span>
                    </p>
                    <a href="#" class="btn btn-success btn-sm w-100">
                        <i class="bi bi-check2-circle"></i> Marquer comme fait
                    </a>
                </div>
            </div>
        </div>
        {% endfor %} {% else %}
        <div class="col-12 text-center">
            <p class="no-exercices">Aucun exercice disponible pour ce plan.</p>
        </div>
        {% endif %}
    </div>

    <!-- Back button -->
    <div class="text-center mt-4">
        <a href="{{ path('workout_plan_show') }}" class="btn btn-light">
            <i class="bi bi-arrow-left"></i> Retour au plan
        </a>
    </div>
</div>
{% endblock %}
