{% extends 'base.html.twig' %} {% block title %}Dashboard{% endblock %} {% block
stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('styles/dashboard.css') }}" />
<link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
/>
{% endblock %} {% block body %}
<div class="dashboard-container">
    <!-- Carte de bienvenue -->
    <div class="welcome-card">
        <h2>Bienvenue, {{ user.name }} !</h2>
        <p>Prochaine session : {{ nextSession }}</p>

        <div class="dashboard-buttons">
            {% if not goal %}
            <a href="{{ path('goal') }}" class="btn btn-primary">
                <i class="bi bi-bullseye"></i> Définir un objectif
                <small>Obtenez un plan personnalisé</small>
            </a>

            {% elseif not goal.workoutPlan %}
            <p>Votre coach prépare bientôt votre plan d’entraînement.</p>

            {% else %}
            <a href="{{ path('workout_plan_show') }}" class="btn btn-secondary">
                <i class="bi bi-clipboard-check"></i> Mon Plan
                <small>Voir le plan complet</small>
            </a>

            {% if goal.workoutPlan.exercices|length > 0 %}
            <a
                href="{{
                    path('workout_exercises', { id: goal.workoutPlan.id })
                }}"
                class="btn btn-accent"
            >
                <i class="bi bi-barbell"></i> Mes Exercices
                <small>Voir les exercices</small>
            </a>
            {% else %}
            <p>Aucun exercice disponible pour ce plan.</p>
            {% endif %} {% endif %}
        </div>

        {% if goal and goal.workoutPlan %}
        <div class="dashboard-buttons bottom-buttons">
            <a
                href="{{
                    path('workout_exercises', { id: goal.workoutPlan.id })
                }}"
                class="btn btn-success"
            >
                <i class="bi bi-play-circle-fill"></i> Commencer l'entraînement
                du jour
            </a>
        </div>
        {% endif %}
    </div>
    </div>
</div>
{% endblock %}
