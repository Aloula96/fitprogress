{% extends 'baseAdmin.html.twig' %} {% block title %}Workout Plans
Administration{% endblock %} {% block body %}
<div class="container">
    <h1>Workout Plans</h1>

    <a href="{{ path('admin_workoutplan_new') }}" class="btn btn-primary mb-3">
        <i class="fas fa-plus"></i> Create New Plan
    </a>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Level</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for plan in plans %}
            <tr>
                <td>{{ plan.titles }}</td>
                <td>{{ plan.level.value }}</td>
                <td>{{ plan.type.value }}</td>
                <td>
                    <a
                        href="{{
                            path('admin_workoutplan_edit', { id: plan.id })
                        }}"
                        class="btn btn-sm btn-info"
                    >
                        <i class="fas fa-edit"></i> Edit
                    </a>

                    <form
                        action="{{
                            path('admin_workoutplan_delete', { id: plan.id })
                        }}"
                        method="post"
                        class="d-inline"
                    >
                        <input
                            type="hidden"
                            name="_token"
                            value="{{ csrf_token('delete' ~ plan.id) }}"
                        />
                        <button
                            type="submit"
                            class="btn btn-sm btn-danger"
                            onclick="return confirm('Are you sure?')"
                        >
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4">No workout plans found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
