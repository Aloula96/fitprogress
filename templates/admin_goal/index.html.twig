{% extends 'baseAdmin.html.twig' %} {% block title %}Goals Administration{%
endblock %} {% block body %}
<div class="container my-4">
    <h1 class="mb-4">Goals Management</h1>

    <!-- Section 1 : Goals without workout plans -->
    <h2 class="h4">Goals Without Workout Plans</h2>
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th>User</th>
                <th>Goal</th>
                <th>Target Weight</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for goal in goalsWithoutPlans %}
            <tr>
                <td>{{ goal.user.email }}</td>
                <td>{{ goal.type.value }}</td>
                <td>{{ goal.targetWeight }} kg</td>
                <td>
                    <a
                        href="{{
                            path('admin_goal_create_plan', { id: goal.id })
                        }}"
                        class="btn btn-sm btn-primary"
                    >
                        Create Plan
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4" class="text-center text-muted">
                    ✅ All goals already have workout plans
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Section 2 : Goals with workout plans -->
    <h2 class="h4 mt-5">Goals With Workout Plans</h2>
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th>User</th>
                <th>Goal</th>
                <th>Target Weight</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for goal in goalsWithPlans %}
            <tr>
                <td>{{ goal.user.email }}</td>
                <td>{{ goal.type.value }}</td>
                <td>{{ goal.targetWeight }} kg</td>
                <td>
                    <a
                        href="{{
                            path('admin_workoutplan_edit', {
                                id: goal.workoutPlan.id
                            })
                        }}"
                        class="btn btn-sm btn-secondary"
                    >
                        Edit
                    </a>
                    <a
                        href="{{
                            path('admin_workout_exercices', {
                                id: goal.workoutPlan.id
                            })
                        }}"
                        class="btn btn-sm btn-info"
                    >
                        Exercises
                    </a>
                    <form
                        method="post"
                        action="{{
                            path('admin_workoutplan_delete', {
                                id: goal.workoutPlan.id
                            })
                        }}"
                        style="display: inline-block"
                        onsubmit="return confirm('Are you sure?');"
                    >
                        <input
                            type="hidden"
                            name="_token"
                            value="{{ csrf_token('delete' ~ goal.workoutPlan.id) }}"
                        />
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4" class="text-center text-muted">
                    ❌ No goals with workout plans yet
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
