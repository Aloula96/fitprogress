{% extends 'base.html.twig' %} {% block title %}Choix de l'objectif{% endblock
%} {% block stylesheets %}
{{ parent() }}
<link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
/>
<link rel="stylesheet" href="{{ asset('styles/goal.css') }}">

{% endblock %} {% block javascripts %}
{{ parent() }}
<script src="{{ asset('js/imc.js') }}"></script>
{% endblock %} {% block body %}
<div
    class="container my-5 goal-container"
    data-height="{{ user.height ?? '' }}"
    data-weight="{{ user.weight ?? '' }}"
>
    <!-- Retour -->
    <a href="{{ path('app_home') }}" class="btn btn-info mb-4">
        <i class="bi bi-arrow-left"></i> Retour
    </a>

    <!-- Title -->
    <div class="text-center mb-5">
        <h1 class="fw-bold">
            <i class="bi bi-bullseye"></i> Choix de l'objectif
        </h1>
        <p class="text-muted">
            Sélectionne ton objectif et définis ton poids cible
        </p>
    </div>

    <!-- Form -->
    <form method="post">
        <div class="row g-4 mb-4 text-center">
            <!-- Prise de masse -->
            <div class="col-md-4">
                <label class="w-100">
                    <input
                        type="radio"
                        class="goal-radio"
                        name="goal"
                        value="prise_de_masse"
                        required
                    />
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <i
                                class="bi bi-lightning-charge display-4 text-warning mb-2"
                            ></i>
                            <h5>Prendre du muscle</h5>
                        </div>
                    </div>
                </label>
            </div>

            <!-- Perte de poids -->
            <div class="col-md-4">
                <label class="w-100">
                    <input
                        type="radio"
                        class="goal-radio"
                        name="goal"
                        value="perte_de_poids"
                        required
                    />
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <i
                                class="bi bi-lightning-charge display-4 text-warning mb-2"
                            ></i>
                            <h5>Perdre du poids</h5>
                        </div>
                    </div>
                </label>
            </div>

            <!-- Maintien -->
            <div class="col-md-4">
                <label class="w-100">
                    <input
                        type="radio"
                        class="goal-radio"
                        name="goal"
                        value="maintien"
                        required
                    />
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <i
                                class="bi bi-lightning-charge display-4 text-warning mb-2"
                            ></i>
                            <h5>Maintenir le poids</h5>
                        </div>
                    </div>
                </label>
            </div>
        </div>

        <!-- Poids cible -->
        <div class="mb-3">
            <label for="target_weight" class="form-label fw-semibold"
                >Poids cible</label
            >
            <input
                type="number"
                id="target_weight"
                name="target_weight"
                class="form-control"
                value="70"
                min="40"
                max="200"
                step="0.1"
            />
        </div>

        <!-- IMC -->
        <div class="mb-4 p-3 border rounded bg-body-secondary">
            <p>
                <strong>IMC actuel :</strong> <span id="current-imc">N/A</span>
            </p>
            <p>
                <strong>Catégorie :</strong> <span id="imc-category">N/A</span>
            </p>
        </div>

        <!-- Submit -->
        <button type="submit" class="btn btn-success w-100">
            <i class="bi bi-check-circle-fill"></i> Valider mon objectif
        </button>
    </form>
</div>
{% endblock %}
