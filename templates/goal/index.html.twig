{% extends 'base.html.twig' %} {% block title %}Choix de l'objectif{% endblock
%} {% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('styles/dashboard.css') }}" />
<link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
/>
{% endblock %} {% block javascripts %}
{{ parent() }}
<script src="{{ asset('js/imc.js') }}"></script>
{% endblock %} {% block body %}
<div class="container my-5 text-white">
    <!-- Retour -->
    <a href="{{ path('app_home') }}" class="btn btn-outline-light mb-3">
        <i class="bi bi-arrow-left"></i> Retour
    </a>

    <!-- Title -->
    <div class="text-center mb-4">
        <h1 class="fw-bold">
            <i class="bi bi-bullseye"></i> Choix de l'objectif
        </h1>
        <p class="text-light">
            Sélectionne ton objectif et définis ton poids cible
        </p>
    </div>

    <!-- Flash messages -->
    {% for label, messages in app.flashes %} {% for message in messages %}
    <div class="alert alert-{{ label }}">{{ message }}</div>
    {% endfor %} {% endfor %}

    <!-- Form -->
    <form method="post" class="p-4 bg-dark rounded shadow-sm">
        <!-- Goals -->
        <div class="mb-4">
            <label class="d-block mb-2">
                <input
                    type="radio"
                    name="goal"
                    value="prise_de_masse"
                    required
                />
                <i class="bi bi-barbell"></i> Prendre du muscle
            </label>
            <label class="d-block mb-2">
                <input
                    type="radio"
                    name="goal"
                    value="perte_de_poids"
                    required
                />
                <i class="bi bi-lightning-charge"></i> Perdre du poids
            </label>
            <label class="d-block">
                <input type="radio" name="goal" value="maintien" required />
                <i class="bi bi-scales"></i> Maintenir le poids
            </label>
        </div>

        <!-- Target Weight -->
        <div class="mb-4">
            <label for="target_weight" class="form-label">Poids cible</label>
            <input
                type="number"
                id="target_weight"
                name="target_weight"
                class="form-control"
                value="70"
                min="40"
                max="200"
                step="0.1"
            />
        </div>

        <!-- IMC Info -->
        <div class="mb-4">
            <p>
                <strong>IMC actuel :</strong> <span id="current-imc">N/A</span>
            </p>
            <p>
                <strong>Catégorie :</strong> <span id="imc-category">N/A</span>
            </p>
        </div>

        <!-- Submit -->
        <button type="submit" class="btn btn-success w-100">
            <i class="bi bi-check-circle-fill"></i> Valider mon objectif
        </button>
    </form>
</div>
{% endblock %}
